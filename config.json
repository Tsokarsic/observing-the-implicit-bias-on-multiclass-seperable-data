{
    "experiment_name": "ImplicitBias_MaxMargin_Analysis",
    "wandb_project": "Multiclass_Implicit_Bias",

    "data": {
        "data_path": "experiment_data/max_margin_results_final_formatnew.json",
        "regenerate_if_not_found": true,
        "save_dir": "./experiment_data/",
        "k": 15,
        "d": 25,
        "n_per_class": 50,
        "sigma": 0.1,
        "seed": 1
    },

    "training": {
        "epochs": 10000,
        "optimizer": "SignGD",
        "log_interval": 200,
        "lr_schedule": {
        "type": "sqrt_t_decay_with_warmup",
        "warmup_steps": 0,
        "t0": 1.0
        },
        "init_method": "zero",
        "init_scale": 0.01,
        "optimizer_params": {
            "GD": {"lr": 10, "momentum": 0.0},
            "Adam": {"lr": 0.001, "betas": [0.9, 0.999], "eps": 1e-8, "weight_decay": 0},
            "SignGD": {"lr": 0.005, "eps": 0}
        }
    }
}