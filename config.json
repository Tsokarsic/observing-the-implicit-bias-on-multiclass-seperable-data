{
    "experiment_name": "ImplicitBias",
    "wandb_project": "Deep_Learning_Project",
    "use_wandb": false,
    "data": {
        "data_path": "experiment_data/max_margin_results_final_formatnew.json",
        "regenerate_if_not_found": true,
        "save_dir": "./experiment_data/",
        "k": 15,
        "d": 25,
        "n_per_class": 50,
        "sigma": 0.1,
        "seed": 1
    },

    "training": {
        "epochs": 10000,
        "optimizer_list": "GD/SignGD/NGD/Muon/NucGD/PGD(高效计算版本的NucGD)/Adam",
        "batch_size": 750,
        "optimizer": "PGD",
        "log_interval": 200,
        "lr_schedule": {
        "type": "sqrt_t_decay_with_warmup",
        "warmup_steps": 0,
        "t0": 1.0
        },
        "init_method": "zero",
        "init_scale": 0.01,
        "optimizer_params": {
            "GD": {"lr": 10, "momentum": 0.0},
            "Adam": {"lr": 0.001, "betas": [0.9, 0.999], "eps": 1e-8, "weight_decay": 0},
            "SignGD": {"lr": 0.01, "eps": 0 ,"momentum": 0,"weight_decay":0},
            "NGD": {"lr": 0.05, "eps": 0 ,"momentum": 0},
            "Muon":  {"lr": 0.02,  "momentum": 0.9 ,"weight_decay":0,"full_svd": true},
            "NucGD":  {"lr": 0.25,  "momentum": 0 ,"weight_decay":0},
            "PGD":  {"lr": 0.25,  "momentum": 0 ,"weight_decay":0}
        }
    }
}